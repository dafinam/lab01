<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dafin.lab1.A1">

    <EditText
        android:id="@+id/a1Input"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="84dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="59dp"
        android:ems="10"
        android:hint="@string/a1Text"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/a1Slider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/a1Slider"
        android:layout_width="81dp"
        android:layout_height="38dp"
        android:layout_marginBottom="145dp"
        android:layout_marginEnd="151dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="46dp"
        app:layout_constraintBottom_toTopOf="@+id/a1Dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a1Input" />

    <Spinner
        android:id="@+id/a1Dropdown"
        android:layout_width="368dp"
        android:layout_height="26dp"
        android:layout_marginBottom="59dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="86dp"
        app:layout_constraintBottom_toTopOf="@+id/a1Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a1Slider" />

    <Button
        android:id="@+id/a1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:text="@string/a1Button"
        android:onClick="task1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a1Dropdown"
        />

</android.support.constraint.ConstraintLayout>
